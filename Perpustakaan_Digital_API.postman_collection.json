		{
			"name": "Testing Scenarios",
			"item": [
				{
					"name": "Test 1 - Invalid Email on Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Login fails with invalid email - Status 401', function() {",
									"  pm.expect(pm.response.code).to.equal(401);",
									"  pm.expect(pm.response.json().message).to.equal('Invalid email or password');",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"notexist@example.com\",\n  \"password\": \"password123\"\n}"
						},
